<tr>
  <td>
    <%= image_tag image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.item_price_cents / 100.0 %>
  </td>
  <td>
    <div>
      <%= quantity %>
    </div>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.item_price_cents * quantity / 100.0 %>
  </td>
</tr>
