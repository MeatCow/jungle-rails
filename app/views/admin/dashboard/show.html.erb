<section class="admin-products-dashboard">

  <header class="page-header">
    <h1>Admin &raquo; All Products</h1>
  </header>

  <div class="card card-body bg-light">
    <%= link_to 'Current Products', admin_products_url, class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product Count</th>
          <th>Category Count</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= @product_count %>
          </td>
          <td>
            <%= @category_count %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</section>
